        <xml><![CDATA[<j:jelly xmlns:j="jelly:core" xmlns:g="jelly:glide">
    <j:if test="${param.movieTitle}">
        <j:set var="posterService" value="new OMDBPosterService()" />
        <j:set var="posterUrl" value="${posterService.getPosterUrl(param.movieTitle)}" />
        
        <j:if test="${!empty(posterUrl)}">
            <img src="${posterUrl}" alt="Movie Poster" style="max-width: 100%; height: auto;" />
        </j:if>
        <j:else>
            <p>Poster not available.</p>
        </j:else>
    </j:if>
    <j:else>
        <p>No movie title provided.</p>
    </j:else>
</j:jelly>]]></xml>
