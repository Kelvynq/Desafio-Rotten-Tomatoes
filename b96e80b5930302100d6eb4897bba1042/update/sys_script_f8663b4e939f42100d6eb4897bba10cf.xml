        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {

	var movie = current.variables.filme;

	var suaNota_str = current.variables.sua_nota;
    var suaNota = parseFloat(suaNota_str);

    var film = new GlideRecord('x_908210_raposa_0_filmes');
	if (film.get(movie)) {
        var notaIMDB_str = film.getValue('nota_imdb_critica'); // Pegando o valor do campo como string
        var notaIMDB = parseFloat(notaIMDB_str); // Convertendo a string para float
	}

		var averageRating = (suaNota + notaIMDB) / 2;
		averageRating = averageRating.toFixed(2).toString();
		film.setValue('nota_da_raposa', averageRating);

		if(averageRating < 5){
        film.setValue('avaliacoes', 'Negativas');
    }else if(averageRating >= 5 && averageRating <= 7){
        film.setValue('avaliacoes', 'Neutras');
    }else 
        film.setValue('avaliacoes', 'Positivas');
	film.update();


})(current, previous);]]></script>
